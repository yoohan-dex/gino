{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true
  },
  "files": [
    // "src/index.ts",
    // "src/Gino/index.ts",
    "src/lynx/index.ts",
    "typings.d.ts"
  ],
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules"
    // "build",
    // "scripts",
    // "acceptance-tests",
    // "webpack",
    // "jest",
    // "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}
